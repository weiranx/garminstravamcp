FROM node:20-slim

RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Pre-cache strava-mcp-server package to speed up first container start
RUN npx --yes @r-huijts/strava-mcp-server --help 2>/dev/null || true

WORKDIR /app

COPY strava-server.js strava-auth-helper.js package.json ./
RUN npm install

VOLUME ["/root/.config/strava-mcp"]

EXPOSE 8102

CMD ["node", "strava-server.js"]
